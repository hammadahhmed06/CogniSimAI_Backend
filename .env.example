# .env.example
# Example environment configuration for CogniSim AI Backend

# Application Configuration
APP_NAME="CogniSim AI - Backend API"
APP_VERSION="1.3.0"

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# OAuth Configuration (Optional)
GITHUB_LOGIN=https://github.com/login/oauth/authorize
GOOGLE_LOGIN=https://accounts.google.com/oauth2/auth

# Jira OAuth Configuration
JIRA_OAUTH_CLIENT_ID=your_jira_oauth_client_id
JIRA_OAUTH_CLIENT_SECRET=your_jira_oauth_client_secret
JIRA_OAUTH_REDIRECT_URI=http://localhost:8000/api/integrations/jira/oauth/callback
FRONTEND_URL=http://localhost:8080

# CORS Origins (Optional - comma separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development Mode (Optional)
DEV_MODE=true

# Encryption Configuration (Optional for production)
# ENCRYPTION_SECRET_KEY=your_secret_key_here
# ENCRYPTION_SALT=your_salt_here

#Slack OAuth Configuration (Optional)
# SLACK_CLIENT_ID=your_slack_client_id_here
# SLACK_CLIENT_SECRET=your_slack_client_secret_here
# SLACK_REDIRECT_URI=http://localhost:8000/api/slack/oauth/callback
